{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "src/**/*",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vite/client"],
    "lib": ["esnext", "dom", "dom.iterable"],
  }
}
